<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <h3>Responda</h3>
            <label for="">Resposta:</label>
            <textarea name="corpo" id="" cols="30" rows="10" placeholder="Digite sua resposta" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(respostas => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= respostas.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs'); %>
